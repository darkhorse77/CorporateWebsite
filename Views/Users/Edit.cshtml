@model CorporateWebsite.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
    <form asp-action="Edit" asp-controller="Users">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input type="text" asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label">Фамилия</label><br />
            <input type="text" asp-for="LastName" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="control-label">Имя</label><br />
            <input type="text" asp-for="FirstName" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Patronymic" class="control-label">Отчество</label><br />
            <input type="text" asp-for="Patronymic" class="form-control"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </form>